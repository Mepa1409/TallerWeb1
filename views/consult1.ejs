<%- include('./templates/header.ejs') %>
<body>
<%- include('./templates/nav.ejs') %>


  <h1>Buscar Cliente</h1>

<form action="/newConsult" method="POST">
  <label for="searchId">Buscar por ID:</label>
  <input type="number" id="searchId" name="searchId" required>
  <button type="submit">Buscar</button>
</form>
<div>
  
<% if (typeof data!== "undefined" && typeof id!== "undefined")  { %>
  <div class="container p-3">
    <div class="table-responsive">
      <table class="table table-bordered table-striped mb-3" id="tableData">
        <thead>
          <tr class="text-center">
            <th scope="col">Id</th>
            <th scope="col">Nombre</th>
            <th scope="col">Apellido</th>
            <th scope="col">Telefono</th>
            <th scope="col">Direccion</th>
            <th scope="col">Eliminar</th>
          </tr>
        </thead>
        <tbody id="tBody">
          <tr>
            <form action="/deleteCustomer" method="POST">
              <td>
                <input type="hidden" name="idcliente" value="<%= id %>">
                <%= id %>
              </td>
            <td><%= data.name %></td>
            <td><%= data.lastname %></td>
            <td><%= data.phone %></td>
            <td><%= data.address %></td>
            <td>
              <button type="submit" class="btn btn-danger">x</button>
            
           
              
            </td>
          </form>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
<% } else { %>
 
    <h4>Cliente No Encontrado</h4>
  
<% } %>

</div>
  



<%- include('./templates/Footer.ejs') %>
</body>
</html>

